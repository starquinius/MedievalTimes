@{
    Layout = "_Layout";
}

@model CharacterVM

<h1>Character Class</h1>
<hr />
<form asp-controller="CreateChar" asp-action="SubmitChar" asp-route-pageNr=4 method="post">

    @Html.HiddenFor(model => model.BuildId)

    <div class="container-fluid">

        <div class="row">
            @foreach (var item in Model.ChoosableClasses)
            {
                <div class="col-lg-3">
                    <input asp-for="Beroepen" type="radio" value="@item.Beroepen" /> @item.Beroepen
                </div>
            }
        </div>

        <div class="row">
            <div class="text-center">
                <button type="submit" class="btn btn-default"><b>Next Page</b></button>
            </div>
        </div>

    </div>



</form>