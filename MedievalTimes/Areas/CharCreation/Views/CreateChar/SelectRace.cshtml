@{
    Layout = "_Layout";
}

@model CharacterVM

<h1>Character Race</h1>
<hr />
<form asp-controller="CreateChar" asp-action="SubmitChar" asp-route-pageNr=3 method="post">

    <div class="col-lg-4">
        @foreach (var item in Model.ChoosableRaces)
        {
            <input asp-for="@item.Chosen" type="radio" value="@item.Race" /> @item.Race.Name
        }
    </div>

    <button type="submit" class="btn btn-default"><b>Next Page</b></button>

</form>